{
	"name": "jeroen/json-dump-reader",
	"description": "Provides line-by-line readers and iterators for Wikibase/Wikidata JSON dumps",
	"keywords": [
		"Wikibase",
		"Wikidata",
		"Dump",
		"JSON",
		"bz2"
	],
	"homepage": "https://github.com/JeroenDeDauw/JsonDumpReader",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"homepage": "http://jeroendedauw.com"
		}
	],
	"require": {
		"php": ">=5.5.0",
		"jeroen/rewindable-generator": "~1.1",
		"wikibase/data-model-serialization": "~1.1|~2.0"
	},
	"require-dev": {
		"whatthejeff/nyancat-phpunit-resultprinter": "~1.2",
		"ockcyp/covers-validator": "~0.2.0",
		"squizlabs/php_codesniffer": "~2.3",
		"phpmd/phpmd": "~2.3",

		"data-values/iri": "~0.1",
		"data-values/number": "~0.1",
		"data-values/geo": "~1.0",
		"data-values/time": "~0.6",

		"jeroen/json-dump-data": "~0.1"
	},
	"autoload": {
		"psr-4": {
			"Wikibase\\JsonDumpReader\\": "src/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.0.x-dev"
		}
	},
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"phpunit",
			"vendor/bin/covers-validator"
		],
		"cs": [
			"composer phpcs",
			"composer phpmd"
		],
		"ci": [
			"composer test",
			"composer cs"
		],
		"phpcs": [
			"vendor/bin/phpcs src/* tests/* --standard=phpcs.xml --extensions=php -sp"
		],
		"phpmd": [
			"vendor/bin/phpmd src/,tests/ text phpmd.xml"
		]
	}
}
